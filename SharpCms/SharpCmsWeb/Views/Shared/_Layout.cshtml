@using SharpCms.Core.DataObjects;
@using SharpCms.Core;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Page-Enter" content="blendTrans(Duration=0.1)" />
    <meta http-equiv="Page-Exit" content="blendTrans(Duration=0.1)" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.KeyWords" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="author" content="Jürgen I. Gutsch (www.gutsch-online.de)" />
    <meta name="generator" content="sharpcms" />
    <meta name="revisit-after" content="7 days" />
    <meta name="robots" content="index,follow" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="page_margins">
        <div id="page">
            <div id="header">
                <div id="head1">
                    <div id="logo">
                        <a href="/">
                            <img src="/img/slogo.gif" alt="" />
                        </a>
                    </div>
                    <div id="topmenu">
                        <ul>
                            @if (ViewContext.RouteData.Values["page1"].ToString() == "english")
                            {
                                <li>
                                    <a href="/german/about/">
                                        <span>German</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/english/imprint/">
                                        <span>Imprint</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/english/imprint/sitemap/">
                                        <span>Sitemap</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/english/imprint/contact/">
                                        <span>Contact</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="/english/about/">
                                        <span>English</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/german/imprint/">
                                        <span>Impressum</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/german/imprint/sitemap/">
                                        <span>Sitemap</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/german/imprint/contact/">
                                        <span>Kontakt</span>
                                        <span class="hide">| </span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="clear"></div>
                </div>
                <div id="head2"></div>
                <div id="head3">
                    <div class="teaser">
                        <p>
                            @if (ViewContext.RouteData.Values["page1"].ToString() == "english")
                            {
                                <span>This website hosts the open source content management system "sharpcms". It is a CMS purely based on ASP.NET MVC 4</span>
                            }
                            else
                            {
                                <span>Diese Website präsentiert das Open Source Content Management System "sharpcms". Dies ist ein CMS das komplett auf ASP.NET MVC 4 basiert</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            @{ Html.RenderPartial("topmenu", ((PageModel)ViewContext.ViewData.Model).SiteTree); }

            <div id="main">
                <div id="col1">
                    <div id="col1_content" class="clearfix">&nbsp;</div>
                </div>
                <div id="col2">
                    <div id="col2_content" class="clearfix">
                        @{ Html.RenderPartial("submenu", ((PageModel)ViewContext.ViewData.Model).SiteTree); }
                        <p>&nbsp;</p>
                        @this.RenderSection("News", @<span>This is the default!</span>)
                    </div>
                </div>
                <div id="col3">
                    <div id="col3_content" class="clearfix">
                        <div id="contentcontainer">
                            @{ /* debugmessage */ }
                            @RenderBody()

                        </div>
                    </div>
                    <div id="ie_clearing">&nbsp;</div>
                </div>
            </div>
            <div id="footer">
                <div id="fo2">
                    <p>
                        <a href="http://validator.w3.org/check?uri=referer">
                            <img style="border: 0; width: 88px; height: 31px" src="http://www.w3.org/Icons/valid-xhtml10" alt="Valid XHTML 1.0 Transitional" />
                        </a>
                        <span class="hide">| </span>
                        <a href="http://jigsaw.w3.org/css-validator/check/referer/">
                            <img style="border: 0; width: 88px; height: 31px" src="http://jigsaw.w3.org/css-validator/images/vcss" alt="Valid CSS!" />
                        </a>
                    </p>
                </div>
                <div id="fo1">

                    @if (ViewContext.RouteData.Values["page1"].ToString() == "english")
                    {
                        <p><a href="/english/about/">Start</a> | <a href="/english/imprint/">Imprint </a>| <a href="/english/imprint/sitemap/">Sitemap </a>| <a href="/english/imprint/contact/">Contact </a></p>
                    }
                    else
                    {
                        <p><a href="/german/about/">Start</a> | <a href="/german/imprint/">Impressum </a>| <a href="/german/imprint/sitemap/">Sitemap </a>| <a href="/german/imprint/contact/">Kontakt </a></p>
                    }
                    <p>
                        Powered by <a href="http://www.gutsch-online.de/" target="_blank">www.gutsch-online.de</a> and <a href="http://www.klickflupp.ch/" target="_blank">www.klickflupp.ch</a>
                    </p>
                    <div class="clear">&nbsp;</div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
